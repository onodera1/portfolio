<div class="container">
  <div class="row">
  	<div class="col-lg-9">
  		<div>相談一覧</div>
				
				<% @counselings.each do |counseling| %>
					<div class="panel panel-default">
			      <div class="panel-body">
					  <%= attachment_image_tag counseling.user, :image, :fill, 100, 100, format: 'jpeg' , class: "img-circle pull-left profile-img", fallback: "no_image.jpg"%>
					   <p class="lead"><span><%=link_to counseling.title ,counseling_path(counseling.id) %></span></p>
			      </div>
			    </div>
			 <% end %>
			</div>
		  <div class="col-lg-3">
			<div>相談ランキング</div>
				<% @counselinglikes.each.with_index(1) do |counselinglike,i| %>
					<h5>第 <%= i %> 位</h5>
					<%=link_to counselinglike.title ,counseling_path(counselinglike.id)  %>
				<% end %>

			<div>解決ランキング</div>
				<% @counselingcommentlikes.each.with_index(1) do |counselingcommentlike,i| %>
					<h5>第 <%= i %> 位</h5>
					<%=link_to counselingcommentlike.comment ,counseling_path(counselingcommentlike.id)  %>
				<% end %>
			</div>
   </div>
</div>
			<%= paginate @counselings %>
