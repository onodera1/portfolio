<div class="container">
  <div class="row">
    <div class="col-lg-3"> 
    </div>
    <div class="col-lg-6"> 
      <h2>編集画面</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label "名前(姓)" %>
              <%= f.text_field :last_name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label "名前(名)" %>
              <%= f.text_field :first_name %>
          </div>
          <div class="field">
            <%= f.label "ニックネーム" %>
              <%= f.text_field :nickname %>
          </div>
          <div class="field">
            <%= f.label "電話番号" %>
              <%= f.text_field :phone_number %>
          </div>
          <div class="field">
            <%= f.label "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
             <%= f.attachment_field :image %>
          </div>
          <div class="actions">
            <%= f.submit "送信", class: "submit" %>
          </div>
          <% end %>
            <%= render "devise/shared/links" %>
            <%= link_to '戻る', :back %>
          </div>
      <div class="col-lg-3"> 
    </div>
  </div>
</div>





