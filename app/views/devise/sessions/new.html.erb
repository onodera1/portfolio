
<div class="container">
  <div class="row">
    <div class="col-lg-3"> 
    </div>
    <div class="col-lg-6"> 
    <div class="lead">当サイトはログインしたユーザーのみご利用いただけます</div>

      <h3>ログイン</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
      <div class="col-lg-3"> 
    </div>
  </div>
</div>






