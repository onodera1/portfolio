<div class="main-container"></div>
<div class="container">
  <div class="center-block">
    <div class="row">
      <ul class="nav nav-tabs">
        <li class="active">
        <a href="#ホーム"data-toggle="tab">ホーム</a></li>
        <li><a href="#ランキング"data-toggle="tab">ランキング</a></li>
        <li><a href="#お気に入り"data-toggle="tab">お気に入りリスト</a></li>
        <li><a href="#新着一覧"data-toggle="tab">新着一覧</a></li>
      </ul>
    <div class="tab-content">
      <div class="tab-pane fade in active" id="ホーム">
      </div>

       <div class="tab-pane fade" id="ランキング">
        <div>共有閲覧ランキング</div>
          <table class="table">
            <thead>
              <tr>
                <th>順位</th>
                <th>名前</th>
                <th>タイトル</th>
                <th>閲覧数</th>
              </tr>
            </thead>
            <tbody>
              <% @sharing_viewed.each.with_index(1) do |sharing, i| %>
                <tr>
                  <td>
                    <%= "#{i}" %>
                  </td>
                  <td>
                    <%= attachment_image_tag sharing.user, :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img", fallback: "/images/no_image.jpg",size: '50x50'%>
                     <%= sharing.user.nickname.truncate(3) %>
                  </td>
                  <td>
                    <%= link_to sharing.title.truncate(3) ,sharing_path(sharing)%>
                  </td>
                  <td>
                    <%=  sharing.impressions_count %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
          <div>相談閲覧ランキング</div>
          <table class="table">

              <thead>
                <tr>
                  <th>順位</th>
                   <th>名前</th>
                  <th>タイトル</th>
                  <th>閲覧数</th>
                </tr>
              </thead>
              <tbody>
                <% @counseling_viewed.each.with_index(1) do |counseling, i| %>
                  <tr>
                    <td>
                      <%= "#{i}" %>
                    </td>
                    <td>
                       <%= attachment_image_tag counseling.user, :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img",  fallback: "/images/no_image.jpg",size: '50x50'%>
                        <%= counseling.user.nickname.truncate(3) %>
                    </td>
                    <td>
                      <%= link_to counseling.title.truncate(3) ,counseling_path(counseling)%>
                    </td>
                    <td>
                      <%=  counseling.impressions_count %>
                    </td>
                  </tr>
                  <% end %>
              </tbody>
            </table>

            <div>共有いいねランキング</div>
            <table>
              <thead>
                <tr>
                  <th>順位</th>
                  <th>名前</th>
                  <th>タイトル</th>
                  <th>いいね数</th>
                </tr>
              </thead>
              <tbody>
                <% @sharings.each.with_index(1) do |sharing,i| %>
                  <tr>
                    <td>
                      <%= i %>
                    </td>
                    <td>
                        <%= attachment_image_tag sharing.user, :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img",fallback: "/images/no_image.jpg",size: '50x50'%>
                      <%= sharing.user.nickname %>
                    </td>
                    <td>
                      <%=link_to sharing.title ,sharing_path(sharing.id)  %>
                    </td>
                    <td>
                      <%= sharing.sharinglikes.length%>
                    </td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
            <div>相談いいねランキング</div>
            <table>
              <thead>
                <tr>
                  <th>順位</th>
                  <th>名前</th>
                  <th>タイトル</th>
                  <th>いいね数</th>
                </tr>
              </thead>
              <tbody>
                <% @counselings.each.with_index(1) do |counseling,i| %>
                  <tr>
                    <td>
                      <%= i %>
                    </td>
                    <td>
                        <%= attachment_image_tag counseling.user, :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img", fallback: "/images/no_image.jpg",size: '50x50'%>
                        <%= counseling.user.nickname %>
                    </td>
                    <td>
                      <%=link_to counseling.title ,counseling_path(counseling.id)  %>
                    </td>
                    <td>
                      <%= counseling.counselinglikes.length%>
                    </td>
                  </tr>
                  <% end %>
              </tbody>
            </table>

            <div>解決ユーザーランキング</div>
              <%#= @bbb.inspect %><br>
              <table>
                <thead>
                  <tr>
                    <th>順位</th>
                    <th>ユーザー名</th>
                    <th>解決数</th>
                  </tr>
                </thead>
                 <tbody>
                  <tr>
                    <% @user_rankings.each do |user_ranking| %>
                    <td>
                       <%= user_ranking[:rank] %>
                    </td>
                    <td>
                       <%= attachment_image_tag user_ranking[:user], :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img", fallback: "/images/no_image.jpg",size: '50x50'%>
                       <%= user_ranking[:user].nickname %>
                    </td>
                    <td>
                      <%= user_ranking[:count] %>
                    </td>
                  </tr>
                  <% end %>
                 </tbody>
                </table>
              </div>

            <div class="tab-pane fade" id="お気に入り">
            <div>お気に入り一覧</div>
            <table>
              <thead>
                <tr>
                  <th>名前</th>
                  <th>タイトル</th>
                </tr>
              </thead>
              <tbody> 
                <% @sharingstocks.each do |sharingstock| %>
                  <tr> 
                     <td>
                      <%= attachment_image_tag sharingstock.user, :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img", fallback: "/images/no_image.jpg",size: '50x50'%>
                      <%= sharingstock.user.nickname %>
                    </td>
                    <td>
                      <%= link_to sharingstock.sharing.title,sharing_path(sharingstock.id) %>
                    </td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
            <div class="tab-pane fade" id="新着一覧">
             <div>新着共有</div>
                <table>
                  <thead>
                    <tr>
                      <th>ユーザー名</th>
                      <th>タイトル</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @sharing_news .each do |sharing_new| %>
                      <tr>
                        <td>
                          <%= attachment_image_tag sharing_new.user, :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img", fallback: "/images/no_image.jpg",size: '50x50'%>
                          <%= sharing_new.user.nickname%>
                        </td>
                        <td>
                          <%= link_to sharing_new.title ,sharing_path(sharing_new.id)%>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <div><%= link_to " 共有内容一覧" ,sharings_path %></div>
              <div>新着相談</div>
               <%#= @counseling_news.inspect %>
                <table>
                  <thead>
                    <tr>
                      <th>ユーザー名</th>
                      <th>タイトル</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @counseling_news.each do |counseling_new| %> 
                      <tr>
                        <td>
                          <%= attachment_image_tag counseling_new.user, :image, :fill, 50, 50, format: 'jpeg' , class: "img-circle profile-img",fallback: "/images/no_image.jpg",size: '50x50'%>
                          <%= counseling_new.user.nickname%>
                        </td>
                        <td>
                          <%= link_to counseling_new.title ,counseling_path(counseling_new.id) %>
                        </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <div><%= link_to " 相談内容一覧" ,counselings_path %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
